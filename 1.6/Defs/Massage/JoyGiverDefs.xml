<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <JoyGiverDef>
        <defName>HOTL_JoyGiver_Massage</defName>
        <giverClass>HealersOfTheLighthouse.JoyGiver_MassageBed</giverClass>
        <baseChance>2</baseChance>
        <requireChair>false</requireChair>
        <desireSit>false</desireSit>
        <canDoWhileInBed>false</canDoWhileInBed>
        <thingDefs>
            <li>HOTL_MassageBed</li>
        </thingDefs>
        <jobDef>HOTL_BottomMassage</jobDef>
        <joyKind>HOTL_JoyKind_Massage</joyKind>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
    </JoyGiverDef>

    <JoyKindDef>
        <defName>HOTL_JoyKind_Massage</defName>
        <label>special care</label>
        <modExtensions>
            <li Class="HealersOfTheLighthouse.ModExtension">
                <massageSettings>
                    <oils>
                        <li>HOTL_OilBottle_Strawberry</li>
                        <li>HOTL_OilBottle_Honey</li>
                        <li>HOTL_OilBottle_Choco</li>
                        <li>HOTL_OilBottle_Transparent</li>
                    </oils>
                    <!-- Beauty -->
                    <BeautyMinNormValue>0.5</BeautyMinNormValue>
                    <BeautyMaxNormValue>1.5</BeautyMaxNormValue>
                    <BeautyMin>-4</BeautyMin>
                    <BeautyMax>4</BeautyMax>
                    <!-- Opinion -->
                    <OpinionMinNormValue>0.3</OpinionMinNormValue>
                    <OpinionMaxNormValue>1.7</OpinionMaxNormValue>
                    <OpinionMin>-100</OpinionMin>
                    <OpinionMax>100</OpinionMax>
                    <!-- Manipulation -->
                    <MaxManipulationAllowed>5</MaxManipulationAllowed>
                    <!-- Social -->
                    <SocialMinNormValue>0.3</SocialMinNormValue>
                    <SocialMaxNormValue>1.7</SocialMaxNormValue>
                    <SocialMin>0</SocialMin>
                    <SocialMax>20</SocialMax>
                    <!-- Joy -->
                    <baseJoyGainFactor>2</baseJoyGainFactor>
                </massageSettings>
            </li>
        </modExtensions>
    </JoyKindDef>

</Defs>