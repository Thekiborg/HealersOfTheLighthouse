	<!-- Arc Thrower -->
	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>HOTL_Install_CA_ArcThrower</defName>
		<label>install arc thrower</label>
		<description>Install an arc thrower.</description>
		<descriptionHyperlinks>
			<ThingDef>HOTL_CA_ArcThrower</ThingDef>
			<HediffDef>HOTL_Installed_CA_ArcThrower</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing arc thrower.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>HOTL_CA_ArcThrower</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>HOTL_CA_ArcThrower</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Shoulder</li>
		</appliedOnFixedBodyParts>
		<addsHediff>HOTL_Installed_CA_ArcThrower</addsHediff>
	</RecipeDef>

