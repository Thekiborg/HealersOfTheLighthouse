    <ThingDef ParentName="HOTL_BoosterProjectileBase">
        <defName>HOTL_MediBooster_Projectile</defName>
        <label>medi booster</label>
        <graphicData>
            <texPath>Item/MediBooster/MediBooster_a</texPath>
        </graphicData>
        <modExtensions>
            <li Class="HealersOfTheLighthouse.ModExtension">
                <projectileDrugSettings>
                    <drugThingDef>DBBooster_Medi</drugThingDef>
                    <extraRotation>135</extraRotation>
                </projectileDrugSettings>
            </li>
        </modExtensions>
    </ThingDef>

