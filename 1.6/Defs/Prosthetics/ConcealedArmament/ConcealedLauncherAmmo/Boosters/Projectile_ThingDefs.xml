<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Medi booster -->
    <ThingDef Name="HOTL_BoosterProjectileBase" ParentName="BaseBullet" Abstract="true">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>HealersOfTheLighthouse.Projectile_Drug</thingClass>
        <projectile>
            <damageDef>HOTL_NoDamage</damageDef>
            <speed>35</speed>
            <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
            <damageAmountBase>0</damageAmountBase>
        </projectile>
    </ThingDef>

