	<!-- Arc thrower -->
	<HediffDef ParentName="HOTL_AddedConcealedLightningArmamentBase">
		<defName>HOTL_Installed_CA_ArcThrower</defName>
		<label>arc thrower</label>
		<labelNoun>an arc thrower</labelNoun>
		<description>Military synthetic prosthesis identical to an organic limb. It sacrifices the superior performance of bionics for the capacity to conceal armament within its hull.\n\nThe &lt;color=#9cb6e2&gt;arc thrower&lt;/color&gt; shoots arcing electricity capable of bouncing to (potentially unintended) targets. It is usually used in wet environments, in which the arcs are enhanced.</description>
		<descriptionHyperlinks>
			<ThingDef>HOTL_CA_ArcThrower</ThingDef>
			<RecipeDef>HOTL_Install_CA_ArcThrower</RecipeDef>
		</descriptionHyperlinks>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>fist</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="HealersOfTheLighthouse.HediffCompProperties_CombatProsthetic">
				<combatAbilities>
					<li>HOTL_ConcealedArmament_ArcThrower</li>
				</combatAbilities>
			</li>
		</comps>
		<spawnThingOnRemoved>HOTL_CA_ArcThrower</spawnThingOnRemoved>
	</HediffDef>

	<!-- Zeus breath -->
	<HediffDef ParentName="HOTL_AddedConcealedLightningArmamentBase">
		<defName>HOTL_Installed_CA_ZeusBreath</defName>
