        <graphicData>
            <texPath>Items/Prosthesis/ImplantBox_Arm</texPath>
        </graphicData>
        <descriptionHyperlinks>
            <RecipeDef>HOTL_Install_CA_MarbleLauncher</RecipeDef>
            <HediffDef>HOTL_Installed_CA_MarbleLauncher</HediffDef>
            <ThingDef>HOTL_MarbleRound_Fire</ThingDef>
            <ThingDef>HOTL_MarbleRound_Tox</ThingDef>
