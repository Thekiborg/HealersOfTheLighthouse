<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Used by the propelled arm when launching a pawn against a wall -->
    <DamageDef>
        <defName>HOTL_CollideDamage</defName>
        <label>crush</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <externalViolence>true</externalViolence>
        <deathMessage>{0} has died by smashing into a wall.</deathMessage>
        <hediff>Crush</hediff>
        <hediffSkin>Crush</hediffSkin>
        <hediffSolid>Crush</hediffSolid>
        <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
        <impactSoundType>Blunt</impactSoundType>
        <armorCategory>Blunt</armorCategory>
        <overkillPctToDestroyPart>0.4~1.0</overkillPctToDestroyPart>
    </DamageDef>

    <!-- Used by all lightning prosthesis -->
    <DamageDef ParentName="Bullet">
        <defName>HOTL_LightningDamage</defName>
        <label>lightning arc</label>
        <deathMessage>{0} has been electrocuted to death.</deathMessage>
        <hediff>ElectricalBurn</hediff>
        <impactSoundType>Electric</impactSoundType>
        <armorCategory>Heat</armorCategory>
    </DamageDef>

    <!-- No damage -->
    <DamageDef ParentName="Bullet">
        <defName>HOTL_NoDamage</defName>
        <label>no damage</label>
    </DamageDef>

</Defs>