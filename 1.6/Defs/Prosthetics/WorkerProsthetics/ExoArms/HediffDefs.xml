<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<HediffDef ParentName="HOTL_InstalledImplantBase">
		<defName>HOTL_Installed_ExoArm</defName>
		<hediffClass>HealersOfTheLighthouse.Hediff_Exoarm</hediffClass>
		<label>exoarm</label>
		<labelNoun>an exoarm</labelNoun>
		<description>An articulated robotic arm that gets attached to the spine. Despite it feeling like a natural arm, it can become a nuisance to move around with. Up to 6 exoarms can be installed on the same person.</description>
		<minSeverity>0</minSeverity>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>6</maxSeverity>
		<stages> <!-- Must be on increments of 1 -->
			<li>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.075</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<overrideLabel>exoarm x2</overrideLabel>
				<minSeverity>2</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.3</offset>
					</li>
				</capMods>
			</li>
			<li>
				<overrideLabel>exoarm x3</overrideLabel>
				<minSeverity>3</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.225</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.45</offset>
					</li>
				</capMods>
			</li>
			<li>
				<overrideLabel>exoarm x4</overrideLabel>
				<minSeverity>4</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.6</offset>
					</li>
				</capMods>
			</li>
			<li>
				<overrideLabel>exoarm x5</overrideLabel>
				<minSeverity>5</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.375</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.75</offset>
					</li>
				</capMods>
			</li>
			<li>
				<overrideLabel>exoarm x6</overrideLabel>
				<minSeverity>6</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.45</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.9</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<renderNodeProperties>
			<li Class="HealersOfTheLighthouse.PawnRenderNodeProperties_ExoArm">
				<texPath>RenderNodeTextures/ExoArms/Exoarm</texPath>
				<severityToShow>1</severityToShow>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<scale>1.35</scale>
					<defaultData>
						<layer>-10</layer>
					</defaultData>
					<dataNorth>
						<layer>45</layer>
					</dataNorth>
				</drawData>
			</li>
			<li Class="HealersOfTheLighthouse.PawnRenderNodeProperties_ExoArm">
				<texPath>RenderNodeTextures/ExoArms/Exoarm</texPath>
				<severityToShow>2</severityToShow>
				<flipGraphic>true</flipGraphic>
				<visibleFacing>
					<li>North</li>
					<li>South</li>
				</visibleFacing>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<scale>1.35</scale>
					<defaultData>
						<layer>-10</layer>
					</defaultData>
					<dataNorth>
						<layer>45</layer>
					</dataNorth>
				</drawData>
			</li>
			<li Class="HealersOfTheLighthouse.PawnRenderNodeProperties_ExoArm">
				<texPath>RenderNodeTextures/ExoArms/Exoarm</texPath>
				<severityToShow>3</severityToShow>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<scale>1.35</scale>
					<defaultData>
						<layer>-10</layer>
						<offset>(0, 0, -0.10)</offset>
						<rotationOffset>-19</rotationOffset>
					</defaultData>
					<dataNorth>
						<layer>45</layer>
					</dataNorth>
					<dataEast>
						<offset>(0, 0, -0.10)</offset>
						<rotationOffset>-17</rotationOffset>
					</dataEast>
					<dataWest>
						<offset>(0, 0, -0.10)</offset>
						<rotationOffset>17</rotationOffset>
					</dataWest>
				</drawData>
			</li>
			<li Class="HealersOfTheLighthouse.PawnRenderNodeProperties_ExoArm">
				<texPath>RenderNodeTextures/ExoArms/Exoarm</texPath>
				<severityToShow>4</severityToShow>
				<flipGraphic>true</flipGraphic>
				<visibleFacing>
					<li>North</li>
					<li>South</li>
				</visibleFacing>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<scale>1.35</scale>
					<defaultData>
						<layer>-10</layer>
						<offset>(0, 0, -0.10)</offset>
						<rotationOffset>-19</rotationOffset>
					</defaultData>
					<dataNorth>
						<layer>45</layer>
					</dataNorth>
					<dataEast>
						<offset>(0, 0, -0.10)</offset>
						<rotationOffset>-17</rotationOffset>
					</dataEast>
					<dataWest>
						<offset>(0, 0, -0.10)</offset>
						<rotationOffset>17</rotationOffset>
					</dataWest>
				</drawData>
			</li>
			<li Class="HealersOfTheLighthouse.PawnRenderNodeProperties_ExoArm">
				<texPath>RenderNodeTextures/ExoArms/Exoarm</texPath>
				<severityToShow>5</severityToShow>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<scale>1.35</scale>
					<defaultData>
						<layer>-10</layer>
						<offset>(0, 0, -0.20)</offset>
						<rotationOffset>-38</rotationOffset>
					</defaultData>
					<dataNorth>
						<layer>45</layer>
					</dataNorth>
					<dataEast>
						<offset>(0, 0, -0.20)</offset>
						<rotationOffset>-34</rotationOffset>
					</dataEast>
					<dataWest>
						<offset>(0, 0, -0.20)</offset>
						<rotationOffset>34</rotationOffset>
					</dataWest>
				</drawData>
			</li>
			<li Class="HealersOfTheLighthouse.PawnRenderNodeProperties_ExoArm">
				<texPath>RenderNodeTextures/ExoArms/Exoarm</texPath>
				<severityToShow>6</severityToShow>
				<flipGraphic>true</flipGraphic>
				<visibleFacing>
					<li>North</li>
					<li>South</li>
				</visibleFacing>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<scale>1.35</scale>
					<defaultData>
						<layer>-10</layer>
						<offset>(0, 0, -0.20)</offset>
						<rotationOffset>-38</rotationOffset>
					</defaultData>
					<dataNorth>
						<layer>45</layer>
					</dataNorth>
					<dataEast>
						<offset>(0, 0, -0.20)</offset>
						<rotationOffset>-34</rotationOffset>
					</dataEast>
					<dataWest>
						<offset>(0, 0, -0.20)</offset>
						<rotationOffset>34</rotationOffset>
					</dataWest>
				</drawData>
			</li>
		</renderNodeProperties>
		<descriptionHyperlinks>
			<ThingDef>HOTL_ExoArm</ThingDef>
			<RecipeDef>HOTL_Install_ExoArm</RecipeDef>
		</descriptionHyperlinks>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>exoarm fist</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>4</power>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>HOTL_ExoArm</spawnThingOnRemoved>
	</HediffDef>

</Defs>