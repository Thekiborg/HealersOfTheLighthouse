<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="BedWithQualityBase">
        <defName>HOTL_OperatingBed</defName>
        <label>operating bed</label>
        <description>A bed specially designed for use in operating rooms. It improves surgical outcomes over normal and hospital beds, but it is quite uncomfortable.</description>
        <graphicData>
            <texPath>Things/Building/Furniture/Bed/HospitalBed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <castEdgeShadows>True</castEdgeShadows>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToBuild>2800</WorkToBuild>
            <Mass>35</Mass>
            <Flammability>1.0</Flammability>
            <BedRestEffectiveness>0.75</BedRestEffectiveness>
            <Comfort>0.80</Comfort>
            <ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
            <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
            <SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
            <BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">5</BirthRitualQualityOffset>
        </statBases>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>VitalsMonitor</li>
                    <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
                </linkableFacilities>
            </li>
        </comps>
        <size>(1,2)</size>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>40</costStuffCount>
        <costList>
            <Steel>80</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <building>
            <bed_showSleeperBody>true</bed_showSleeperBody>
            <bed_healPerDay>10</bed_healPerDay>
            <bed_defaultMedical>true</bed_defaultMedical>
            <buildingSizeCategory>Small</buildingSizeCategory>
            <paintable>true</paintable>
        </building>
        <fillPercent>0.4</fillPercent>
        <pathCost>42</pathCost>
        <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
        <staticSunShadowHeight>0.17</staticSunShadowHeight>
        <designationHotKey>Misc5</designationHotKey>
        <researchPrerequisites>
            <li>HospitalBed</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <techLevel>Industrial</techLevel>
        <uiIconScale>0.90</uiIconScale>
    </ThingDef>

</Defs>