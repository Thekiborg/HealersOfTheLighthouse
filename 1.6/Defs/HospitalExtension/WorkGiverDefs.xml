<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <WorkGiverDef>
        <defName>HOTL_SurgeonTendEmergency</defName>
        <label>tend to patients with urgent needs</label>
        <giverClass>WorkGiver_TendOtherUrgent</giverClass>
        <workType>HOTL_Surgeon</workType>
        <emergency>true</emergency>
        <verb>tend to</verb>
        <gerund>tending to</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <priorityInType>20</priorityInType>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <WorkGiverDef>
        <defName>HOTL_MovePatientToOperatingBed</defName>
        <label>take people to operating beds</label>
        <giverClass>HealersOfTheLighthouse.Workgiver_TakePatientToOperatingBed</giverClass>
        <workType>HOTL_Surgeon</workType>
        <priorityInType>90</priorityInType>
        <billGiversAllAnimals>true</billGiversAllAnimals>
        <billGiversAllAnimalsCorpses>true</billGiversAllAnimalsCorpses>
        <verb>take to</verb>
        <gerund>taking to</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <WorkGiverDef>
        <defName>HOTL_ClearOperatingBed</defName>
        <label>clear operating beds</label>
        <giverClass>HealersOfTheLighthouse.Workgiver_ClearOperatingBed</giverClass>
        <workType>HOTL_Surgeon</workType>
        <priorityInType>100</priorityInType>
        <billGiversAllAnimals>true</billGiversAllAnimals>
        <billGiversAllAnimalsCorpses>true</billGiversAllAnimalsCorpses>
        <verb>clear</verb>
        <gerund>clearing</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

</Defs>