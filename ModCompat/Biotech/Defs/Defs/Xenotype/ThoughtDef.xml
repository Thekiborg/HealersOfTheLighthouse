<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Used by the gene HOTL_PacifistNature -->
    <ThoughtDef>
        <defName>HOTL_PacifistHarmedPawn</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/GenericBad</icon>
        <durationDays>1</durationDays>
        <stackLimit>5</stackLimit>
        <stackedEffectMultiplier>0.7</stackedEffectMultiplier>
        <stages>
          <li>
            <label>attacked innocent creature</label>
            <description>todo</description>
            <baseMoodEffect>-8</baseMoodEffect>
          </li>
        </stages>
    </ThoughtDef>

      
    <!-- Used by the ability HOTL_SDBD_AbilityTheorize -->
    <ThoughtDef>
      <defName>HOTL_TheorizedWithColonist</defName>
      <thoughtClass>Thought_MemorySocial</thoughtClass>
      <durationDays>10</durationDays>
      <stackLimit>300</stackLimit>
      <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
      <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
      <nullifyingHediffs>
        <li MayRequire="Ludeon.RimWorld.Anomaly">Inhumanized</li>
      </nullifyingHediffs>
      <stages>
        <li>
          <label>discussed a research project</label>
          <description>We've discussed our current research project and made great progress!</description>
          <baseOpinionOffset>8</baseOpinionOffset>
        </li>
      </stages>
    </ThoughtDef>


    <!-- Used by the gene HOTL_LikesRevealingClothes -->
    <ThoughtDef>
      <defName>HOTL_WearingRevealingClothes</defName>
      <workerClass>HealersOfTheLighthouse.ThoughtWorker_RevealingClothes</workerClass>
      <validWhileDespawned>true</validWhileDespawned>
      <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
      <requiredGenes>
        <li>HOTL_LikesRevealingClothes</li>
      </requiredGenes>
      <stages>
        <li>
          <label>wearing revealing apparel</label>
          <description>todo.</description>
          <baseMoodEffect>5</baseMoodEffect>
        </li>
      </stages>
    </ThoughtDef>

</Defs>