<?xml version="1.0" encoding="UTF-8"?>
<Defs>
<!-- BALANCE DOSAGES -->
    <GeneDef>
        <defName>HOTL_SpecialiedDeepblueBreakdown</defName>
        <label>specialized deepblue breakdown</label>
        <geneClass>HealersOfTheLighthouse.GeneClass_SpecializedDeepblueBreakdown</geneClass>
        <description>Carriers of this gene are able to make the most out of deepblue drugs, enhanced with multiple dosages.\n\nDifferent drugs have different dosages, and upon reaching them, the pawn will gain a temporary ability related to the drug's effects.</description>
        <biostatMet>-6</biostatMet>
        <biostatCpx>7</biostatCpx>
        <displayOrderInCategory>100</displayOrderInCategory>
        <exclusionTags>
            <li>SkinColorOverride</li>
        </exclusionTags>
        <modExtensions>
            <li Class="HealersOfTheLighthouse.ModExtension">
                <SDBDHediff>HOTL_SpecialiedDeepblueBreakdown</SDBDHediff>
                <SDBDSettings>
                    <!-- Pearl -->
                    <li>
                        <drugThingDef>DBPearl_Joy</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(218, 209, 105, 255)</transformationColor>
                        <abilityGiven>HOTL_SDBD_AbilityHug</abilityGiven>
                    </li>
                    <li>
                        <drugThingDef>DBPearl_Crystal</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(223, 118, 223, 255)</transformationColor>
                        <abilityGiven></abilityGiven>
                    </li>
                    <li>
                        <drugThingDef>DBPearl_Thinker</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(128, 243, 148, 255)</transformationColor>
                        <abilityGiven>HOTL_SDBD_AbilityTheorize</abilityGiven>
                    </li>
                    <li>
                        <drugThingDef>DBPearl_Alluring</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(48, 152, 230, 255)</transformationColor>
                        <abilityGiven></abilityGiven>
                    </li>
                    <li>
                        <drugThingDef>DBPearl_Numb</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(211, 148, 106, 255)</transformationColor>
                        <abilityGiven></abilityGiven>
                    </li>
                    <!-- Booster -->
                    <li>
                        <drugThingDef>DBBooster_Medi</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(88, 245, 127, 255)</transformationColor>
                        <abilityGiven></abilityGiven>
                    </li>
                    <li>
                        <drugThingDef>DBBooster_Orca</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(100, 100, 100, 255)</transformationColor>
                        <abilityGiven></abilityGiven>
                    </li>
                    <li>
                        <drugThingDef>DBBooster_Hydra</drugThingDef>
                        <dosageToTransform>1</dosageToTransform>
                        <transformationColor>(131, 45, 208, 255)</transformationColor>
                        <abilityGiven></abilityGiven>
                    </li>
                </SDBDSettings>
            </li>
        </modExtensions>
    </GeneDef>


    <!-- intellectual affinity -->
    <GeneDef>
        <defName>HOTL_IntellectualAffinity</defName>
        <label>intellectual affinity</label>
        <description>Carriers of this gene are biologically good at intellectual jobs.</description>
        <biostatMet>-2</biostatMet>
        <biostatCpx>1</biostatCpx>
        <displayOrderInCategory>100</displayOrderInCategory>
        <passionMod>
            <skill>Intellectual</skill>
            <modType>AddOneLevel</modType>
        </passionMod>
    </GeneDef>


    <!-- nimble doctor -->
    <GeneDef>
        <defName>HOTL_NimbleDoctor</defName>
        <label>nimble doctor</label>
        <description>Carriers of this gene are faster at medical jobs, and more precise with their hands overall.</description>
        <biostatMet>-2</biostatMet>
        <biostatCpx>1</biostatCpx>
        <displayOrderInCategory>100</displayOrderInCategory>
        <statOffsets>
			<MedicalTendSpeed>0.25</MedicalTendSpeed>
            <MedicalOperationSpeed>0.25</MedicalOperationSpeed>
		</statOffsets>
        <capMods>
            <li>
                <capacity>Manipulation</capacity>
                <offset>0.15</offset>
            </li>
        </capMods>
    </GeneDef>


    <!-- pacifist nature -->
    <GeneDef>
        <defName>HOTL_PacifistNature</defName>
        <geneClass>HealersOfTheLighthouse.GeneClass_PacifistNature</geneClass>
        <label>pacifist nature</label>
        <description>Carriers of this gene will sadden if attacking an innocent creature.</description>
        <biostatMet>1</biostatMet>
        <biostatCpx>1</biostatCpx>
        <displayOrderInCategory>100</displayOrderInCategory>
    </GeneDef>


</Defs>