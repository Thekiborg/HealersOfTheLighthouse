                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Meat_Megaspider</li>
                        <li>Ambrosia</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
