        <graphicData>
            <texPath>Items/Prosthesis/ImplantBox_Jaw</texPath>
        </graphicData>
        <descriptionHyperlinks>
            <RecipeDef>HOTL_Install_CA_DragonsBreath</RecipeDef>
            <HediffDef>HOTL_Installed_CA_DragonsBreath</HediffDef>
        </descriptionHyperlinks>
        <costList>
            <Moyo2_Abyssteel>20</Moyo2_Abyssteel>
            <ComponentSpacer>3</ComponentSpacer>
            <Chemfuel>40</Chemfuel>
        </costList>
        <statBases>
            <Mass>5</Mass>
        </statBases>
    </ThingDef>

