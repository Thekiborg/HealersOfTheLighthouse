    <!-- Propelled Arm -->
    <ThingDef ParentName="HOTL_ConcealedFireArmamentBase">
        <defName>HOTL_CA_PropelledArm</defName>
        <label>propelled arm</label>
        <description>Military synthetic prosthesis identical to an organic limb. It sacrifices the superior performance of bionics for the capacity to conceal armament within its hull.\n\nThe &lt;color=#c74228&gt;propelled arm&lt;/color&gt; is used by burly operatives, allowing them to push their opponents and clear the way with ease.</description>
        <graphicData>
            <texPath>Items/Prosthesis/ImplantBox_Arm</texPath>
        </graphicData>
        <descriptionHyperlinks>
            <RecipeDef>HOTL_Install_CA_PropelledArm</RecipeDef>
            <HediffDef>HOTL_Installed_CA_PropelledArm</HediffDef>
        </descriptionHyperlinks>
        <costList>
            <Moyo2_Abyssteel>20</Moyo2_Abyssteel>
            <ComponentSpacer>3</ComponentSpacer>
            <Chemfuel>40</Chemfuel>
        </costList>
        <statBases>
            <Mass>5</Mass>
        </statBases>
    </ThingDef>

    <!-- Dragon's breath -->
    <ThingDef ParentName="HOTL_ConcealedFireArmamentBase">
        <defName>HOTL_CA_DragonsBreath</defName>
        <label>dragon's breath</label>
