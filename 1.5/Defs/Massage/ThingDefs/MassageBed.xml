<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="ArtableFurnitureBase">
        <defName>HOTL_MassageBed</defName>
        <label>massage bed</label>
        <description>A bed to relax at while someone else gives you a massage. The oils used help moisturize the skin and bond with your partner.</description>
        <thingClass>HealersOfTheLighthouse.Building_MassageBed</thingClass>
        <graphicData>
            <texPath>Things/Building/Furniture/Table1x2</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(3,4)</drawSize>
        </graphicData>
        <size>(1,2)</size>
        <uiIconScale>0.8</uiIconScale>
        <statBases>
            <MaxHitPoints>75</MaxHitPoints>
            <WorkToBuild>750</WorkToBuild>
            <Mass>5</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>0.5</Beauty>
            <Comfort>0.75</Comfort>
        </statBases>
        <designationCategory>Joy</designationCategory>
        <fillPercent>0.4</fillPercent>
        <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
        <pathCost>42</pathCost>
        <passability>PassThroughOnly</passability>
        <placeWorkers>
            <li>PlaceWorker_NeverAdjacentUnstandable</li>
        </placeWorkers>
        <building>
            <joyKind>HOTL_JoyKind_Massage</joyKind>
            <paintable>true</paintable>
        </building>
        <descriptionHyperlinks>
            <ThingDef>HOTL_OilBottle_Transparent</ThingDef>
            <ThingDef>HOTL_OilBottle_Honey</ThingDef>
            <ThingDef>HOTL_OilBottle_Choco</ThingDef>
            <ThingDef>HOTL_OilBottle_Strawberry</ThingDef>
        </descriptionHyperlinks>
    </ThingDef>

