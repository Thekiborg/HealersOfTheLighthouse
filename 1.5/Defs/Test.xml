<?xml version="1.0" encoding="UTF-8"?>
<Defs>

      <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HOTL_TESTGUN</defName>
    <label>TEST GUN</label>
    <description>A compact, wide-caliber slug-thrower. It's got a very short range, but it packs a punch and handles quite well.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/HeavySMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>440</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>24000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HOTL_LIGHTNINGBULLET</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>22.9</range>
        <burstShotCount>25</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <soundCast>Shot_HeavySMG</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>ShortShots</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>HOTL_LIGHTNINGBULLET</defName>
    <label>LIGHTNING BULLET</label>
    <thingClass>HealersOfTheLighthouse.LightningProjectile</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <speed>99999</speed>
    </projectile>
  </ThingDef>

</Defs>